                                    <div class="input-group-text bg-info" style="width: 40px;">
                                        <i class="far fa-address-card"></i>
                                    </div>
                                </div><br />
                                <span asp-validation-for="USU_NOMBRE" class="text-danger w-100"></span>
                            </div>
                            <div class="input-group mb-3">
                                <input asp-for="USU_PASSWORD" class="form-control" />
                                <div class="input-group-append">
                                    <div class="input-group-text bg-info">
                                        <i class="fas fa-user"></i>
                                    </div>
                                </div><br />
                                <span asp-validation-for="USU_PASSWORD" class="text-danger w-100"></span>
                            </div>
                            <div class="form-group">
                                <div class="m-2  ">
